{
  "name": "vscode-hack",
  "displayName": "Hack",
  "description": "Hack/HHVM support for Visual Studio Code.",
  "version": "0.0.1",
  "publisher": "pranayagarwal",
  "galleryBanner": {
    "color": "#0000FF",
    "theme": "dark"
  },
  "author": {
    "name": "Pranay Agarwal",
    "email": "pranay.agarwal@gmail.com"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Languages",
    "Linters",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.hhconfig"
  ],
  "main": "./out/src/main",
  "contributes": {
    "languages": [
      {
        "id": "hack",
        "aliases": [
          "Hack",
          "hacklang"
        ],
        "configuration": "./hack.configuration.json",
        "extensions": [
          ".php",
          ".hh"
        ],
        "firstLine": "^<\\?hh\\b.*$"
      }
    ],
    "grammars": [
      {
        "language": "hack",
        "scopeName": "text.html.hack",
        "path": "./syntaxes/hack.json"
      }
    ],
    "snippets": [
      {
        "language": "hack",
        "path": "./snippets/hack.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "lint": "node ./node_modules/tslint/bin/tslint -r ./node_modules/tslint-microsoft-contrib ./src/*.ts ./test/*.ts"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32",
    "tslint": "^3.15.1",
    "tslint-microsoft-contrib": "^2.0.10"
  }
}
